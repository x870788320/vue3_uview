.comForm {
  padding: 32rpx;
  background-color: #fff;
  transition: transform 1s;
}
.comForm .comFormItem {
  border-bottom: 1rpx solid #e5e5e5;
  line-height: 56rpx;
  padding: 30rpx 0;
  color: #0F1115;
}
.comForm .comFormItem .comFormItemT {
  display: inline-block;
  padding-right: 60rpx;
  background: linear-gradient(to bottom, #ffffff 60%, #E8F0FD 60%, #E8F0FD 100%);
  color: #626A74;
}
.comForm .comFormItem .comFormItemV {
  margin-top: 26rpx;
  position: relative;
}
.comForm .comFormItem .comFormItemV .comFormItemVImg {
  width: 248rpx;
  height: 248rpx;
  background-color: #e5e5e5;
  border: 1px solid #e5e5e5;
}
.comForm .comFormItem .comFormItemV .comFormItemTip {
  color: #626A74;
}
.comForm .comFormItem .comFormItemV .comFormItemTip .comFormItemTipTime {
  margin-left: 48rpx;
}
.comForm .comFormItem .comFormItemV .comFormItemVBtns {
  display: flex;
}
.comForm .comFormItem .comFormItemV .comFormItemVBtns .comFormItemVBtn {
  width: 96rpx;
  margin-left: 48rpx;
}
.comForm .comFormItem .comFormItemV .comFormListItem {
  background-color: #fff;
  border-radius: 8rpx;
  overflow: hidden;
  border-left: 6rpx solid #4285F4;
  margin: 12rpx 0;
  padding: 24rpx;
}
.comForm .comFormItem .comFormItemV .comFormListItem .comFormListItemObj {
  height: 68rpx;
  display: flex;
}
.comForm .comFormItem .comFormItemV .comFormListItem .comFormListItemObj .comFormListItemObjL {
  margin-right: 12rpx;
}
.comForm .comFormItem .comFormItemV .comFormItemVSign {
  height: 328rpx;
}
.comForm .comFormItem .comFormItemV .comFormItemSign {
  width: 100%;
  height: 100%;
  min-height: 280rpx;
  padding: 16rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  border-radius: 8rpx;
  touch-action: none;
}
.comForm .comFormItem .comFormItemV .comFormItemSign .comFormItemSignImg {
  width: 200rpx;
  height: 200rpx;
}
.comForm .comFormItem .comFormItemV .comFormItemVRow {
  display: flex;
  justify-content: space-between;
}
.comForm .comFormItem .comFormItemV .comFormItemVRow .comFormItemVRowCellImg {
  width: 60px;
  height: 36px;
}
.taskHideBtn {
  width: 260rpx;
  margin: 60rpx auto;
  margin-top: 0;
}
.comFormLoading {
  width: 100vw;
  height: 100vh;
  position: fixed;
  top: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.1);
}