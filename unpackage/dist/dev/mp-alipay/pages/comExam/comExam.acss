.comExam {
  padding: 32rpx;
  background-color: #F2F3F8;
}
.comExam .comExamPre {
  margin: 0 32rpx;
  border-radius: 16rpx;
  overflow: hidden;
  line-height: 64rpx;
}
.comExam .comExamPre .comExamPreT {
  display: inline-block;
  padding-right: 60rpx;
  background: linear-gradient(to bottom, rgba(0, 0, 0, 0) 60%, #84AEF6 60%, #84AEF6 100%);
  font-weight: 600;
  margin-bottom: 20rpx;
}
.comExam .comExamPre .comExamPreLine {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  position: relative;
}
.comExam .comExamPre .comExamPreLine .comExamPrePoint {
  width: 60rpx;
  height: 60rpx;
}
.comExam .comExamPre .comExamPreLine .comExamPreText {
  flex: 1;
}
.comExam .comExamPre .comExamPreLine .comExamPreLook {
  position: absolute;
  right: 40rpx;
  color: #84AEF6;
}
.comExam .comExamPre .comExamBtnCon {
  width: 320rpx;
  margin: 40rpx auto;
}
.comExam .comExamMain {
  height: calc(100vh - 60rpx);
  position: relative;
}
.comExam .comExamMain .comExamMainTime {
  text-align: center;
  margin-bottom: 48rpx;
}
.comExam .comExamMain .comExamPtypeLine {
  display: flex;
  justify-content: space-between;
}
.comExam .comExamMain .comExamPtypeLine .comExamPtype {
  display: inline-block;
  padding-right: 60rpx;
  background: linear-gradient(to bottom, rgba(0, 0, 0, 0) 60%, #EDC489 60%, #EDC489 100%);
  margin-bottom: 40rpx;
}
.comExam .comExamMain .comExamPtypeLine .comExamPImg {
  width: 28rpx;
  height: 28rpx;
  margin-right: 36rpx;
}
.comExam .comExamMain .comExamPTitle {
  font-weight: 600;
  font-size: 32rpx;
  margin-bottom: 40rpx;
  line-height: 52rpx;
}
.comExam .comExamMain .comExamPItem {
  padding-left: 12rpx;
  margin-bottom: 16rpx;
}
.comExam .comExamMain .comExamPItem .comExamPItemLeft {
  margin-right: 12rpx;
}
.comExam .comExamMain .comExamPItemSe {
  background-color: #EDC489;
}
.comExam .comExamMain .comExamPBottom {
  width: 100%;
  height: 80rpx;
  position: absolute;
  bottom: 12rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.comExam .popupContainer {
  width: 72vw;
  padding: 28rpx;
}
.comExam .popupContainer .popupMainText {
  min-height: 100rpx;
  line-height: 50rpx;
  padding: 12rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.comExam .popupContainer .comFormItemVSign {
  background: #ddd;
  border-radius: 12rpx;
}
.comExam .popupContainer .popupMainBtns {
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  display: flex;
  border-top: 1px solid #ccc;
}
.comExam .popupContainer .popupMainBtns .popupMainBtnItem {
  flex: 1;
}
.comExam .popupContainer .popupMainBtnsConfirm {
  color: #f00;
  border-left: 1px solid #ccc;
}