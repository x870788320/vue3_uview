.clapping {
  padding: 32rpx;
  background-color: #F2F3F8;
  position: relative;
}
.clapping .random_status {
  height: 68rpx;
  line-height: 68rpx;
  display: flex;
  justify-content: center;
  color: #626A74;
  font-size: 30rpx;
}
.clapping .random_status .randomBtn {
  width: 50%;
  text-align: center;
  margin: 0 24rpx;
  position: relative;
}
.clapping .random_status .randomBtnSe {
  color: #73A1F5;
  font-weight: 700;
}
.clapping .random_status .randomBtnLine {
  width: 60rpx;
  height: 6rpx;
  background-color: #73A1F5;
  position: absolute;
  bottom: -20rpx;
  left: 0;
  right: 0;
  margin: auto;
}
.clapping .task_hide_main .taskHideMainItem {
  height: 314rpx;
  margin-top: 68rpx;
  padding: 24rpx;
  background-color: #fff;
  border-radius: 12rpx;
  display: flex;
  position: relative;
  font-size: 24rpx;
}
.clapping .task_hide_main .taskHideMainItem .taskHideMainItemL {
  width: 238rpx;
  height: 362rpx;
  margin-top: -48rpx;
  border-radius: 12rpx;
  overflow: hidden;
}
.clapping .task_hide_main .taskHideMainItem .taskHideMainItemL .taskHideMainItemLImg {
  width: 100%;
  height: 100%;
}
.clapping .task_hide_main .taskHideMainItem .taskHideMainItemR {
  flex: 1;
  margin-left: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  line-height: 48rpx;
  color: #626A74;
  margin-top: 30rpx;
}