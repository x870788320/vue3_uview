.know {
  background-image: url("../../static/icon/bg-profile.png");
  background-size: 100%;
  background-repeat: no-repeat;
  padding: 32rpx;
  background-color: #F2F3F8;
}
.know .konwFir {
  display: flex;
  justify-content: space-between;
  align-items: center;
  line-height: 56rpx;
}
.know .konwFir .knowName {
  font-size: 28rpx;
}
.know .konwFir .knowName .knowNameTop {
  line-height: 80rpx;
  font-weight: 700;
  font-size: 40rpx;
}
.know .konwFir .knowName .knowNameBIcon {
  font-size: 40rpx;
  color: #025FFD;
}
.know .konwFir .knowAvatar {
  width: 112rpx;
  height: 112rpx;
  border: 1px solid;
  border-image: linear-gradient(180deg, #FFFFFF 0%, rgba(255, 255, 255, 0) 100%);
  box-sizing: border-box;
  border-radius: 50%;
  overflow: hidden;
}
.know .konwFir .knowAvatar .knowAvatarImg {
  width: 100%;
  height: 100%;
}
.know .knowPost {
  margin-top: 80rpx;
  display: flex;
  font-size: 28rpx;
}
.know .knowPost .knowPostItem {
  flex: 1;
  font-weight: 700;
  color: #626A74;
  line-height: 48rpx;
}
.know .knowPost .knowPostItem .knowPostItemV {
  color: #0F1115;
}
.know .knowMain {
  margin: 40rpx 0;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.know .knowMain .knowMainItem {
  width: calc(50% - 8rpx);
  height: 266rpx;
  background-color: #FFFFFF;
  padding: 32rpx;
  box-sizing: border-box;
  border-radius: 16rpx;
  margin-top: 16rpx;
  font-size: 36rpx;
  font-weight: 700;
  position: relative;
}
.know .knowMain .knowMainItem .knowMainImg {
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  right: 32rpx;
  bottom: 32rpx;
}